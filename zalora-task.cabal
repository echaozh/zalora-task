  ghc-options:         -Wall -fno-warn-orphans
  main-is:             zalora-spec.hs
  hs-source-dirs:      tests, src
  default-language:    Haskell2010
  default-extensions:  FlexibleInstances, OverloadedStrings, TemplateHaskell
